<script>
    @*$(document).ready(function () {
        window.onbeforeprint = bef;
        window.onafterprint = aft;
        window.print();
    });*@

    function bef() {
        if (document.all) {
            contents.style.display = 'none';
            printArea.innerHTML = document.all['printArea'].innerHTML;
        }
    }

    function aft() {
        if (document.all) {
            contents.style.display = 'block';
            printArea.innerHTML = "";
        }
    }
</script>