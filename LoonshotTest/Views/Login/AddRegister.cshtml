@{
    string msg = ViewData["msg"] as string;
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="~/css/register.css" rel="stylesheet" />

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center position-relative" style="top:80px;">
    <div class="auth-box row">
        <div class="col-lg-7 col-md-5 modal-bg-img">
        </div>
        <div class="col-lg-5 col-md-7 bg-white">
            <div class="p-3">
                <h2 class="mt-3 text-center">추가 정보를 입력해주세요</h2>
                @if (string.IsNullOrWhiteSpace(msg) == false)
                {
                    <div id="notify" class="alert alert-danger">@msg</div>
                }
                <form id="form1" method="post" action="/login/socialRegister" class="mt-4">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input name="phone_num" class="form-control" type="text" onkeyup="checkPhone(this.value);" placeholder="전화번호 (-) 제외 숫자" >
                                <br />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <input name="resident_regist_num" class="form-control" type="text" placeholder="주민등록번호 (-) 제외 숫자" onkeyup="checkRegist(this.value);">
                                <br />
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <div class="form-group">
                                <input name="patient_name" class="form-control" type="text" placeholder="이름" onkeyup="checkName(this.value);">
                            </div>
                            <br />
                            <div class="col-lg-12 text-center">
                                <button id="signUp" type="submit" class="btn btn-primary">회원가입</button>
                            </div>
                            
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
