    $("#login_id").change(function () {
        console.log($(this).val());
        if ($(this).val() != null) {
            $.ajax({
                url: "/login/idCheck",
                method: "POST",
                data: {
                    id: $(this).val()
                },
                success:
                    function (resp) {
                        console.log("넘어온 메세지 : " + resp);
                        $("#notify").text(resp);
