    function fncAuth() {

        var phone = $("#pnNum").val()

        if (phone == null || phone.length != 11) {

            alert("disable phone number");
            return;
        }
        alert("send authenticate number");

        $.ajax({
            url: "/login/sendSMS?phone=" + phone,
            method: "GET",
            success:
                function (resp) {
                    console.log("넘어온 키 값 : " + resp);
                    alert(resp);
                    key = resp;
                    alert(key);
                }

        });	 //ajax종료 */
    };


    function fncCheckAuth() {

        authNum = $("#authNum").val();

        if (authNum == key) {
            alert("Success");
            $("#signUp").removeAttr('disabled');
        }

        if (authNum != key) {
            alert("Fail")
        }

    }
</script>