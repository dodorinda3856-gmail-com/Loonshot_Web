@model IEnumerable<MediStaff>

<link rel="stylesheet" href="~/css/bookingindex.css">
<div style="max-width: 240px; margin-top: 100px">
    <a asp-controller="booking" asp-action="mybooking">
        <button type="button" class="btn btn-primary">
            내 예약 보기
        </button>
    </a>
</div>
<div class="row col-lg-7 col-md-5 modal-bg-img">
    @foreach (var staff in Model.Select((value, index) => (value, index)))
    {

        <div style="max-width: 240px; margin-top: 100px" class="col-md-4 col-xs-6 border-primary mb-3">
            <h3 class="card-header">@staff.value.Staff_Name</h3>
            <div class="card-body">
                <h5 class="card-title">@staff.value.Medi_Subject 전문</h5>
            </div>
            <div>
                <a class="booking-selectdoc-btn" asp-controller="Booking" asp-action="ChooseDate" asp-route-id="@staff.value.Staff_Id" class="card-link">
                    <img src="~/img/AfterService/doctor@(staff.index+1).jpg" style="width: 215px;height: 320px; object-fit: cover; display:block;" class="card-img-top" alt="...">
                    <div style="margin:1rem;">
                        <div class="btn btn-danger">
                            예약
                        </div>
                    </div>
                </a>
            </div>
        </div>
    }

</div>
