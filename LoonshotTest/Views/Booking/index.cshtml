@model IEnumerable<MediStaff>

<link rel="stylesheet" href="~/css/bookingindex.css">
<div style="max-width: 240px; margin-top: 100px">
    <a asp-controller="booking" asp-action="mybooking">
        <button type="button" class="btn btn-primary">
            내 예약 보기
        </button>
    </a>
</div>

<div>

<div class="row">
<div class="card-group">
    @foreach (var staff in Model.Select((value, index) => (value, index)))
    {
        <a class="booking-selectdoc-btn" asp-controller="Booking" asp-action="ChooseDate" asp-route-id="@staff.value.Staff_Id" class="card-link">
        <div class="card" style="margin:2rem;">
            <img src="~/img/AfterService/doctor@(staff.index+1).jpg" style="width: 100%;height: 320px; object-fit: cover; display:block;" class="card-img-top" >
            <div class="card-body">
                <h5 class="card-title">@staff.value.Staff_Name 의사</h5>
                <h6>@staff.value.Medi_Subject 전문</h6>
                        <div class="btn btn-danger">
                            예약
                        </div>
                  
            </div>
        </div>
                </a>

    }

</div>
</div>
